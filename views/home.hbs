<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Calculator Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        html,
        body {
            height: 100%;
        }

        .wrapper {
            display: flex;
            flex-direction:
                column;
            min-height: 100%;
        }

        .content {
            flex: 1;
        }
    </style>
</head>

<body>
    <div class="wrapper">
        <header class="bg-dark text-light py-4">
            <div class="container">
                <h1 class="text-center">Calculator</h1>
            </div>
        </header>

        <div class="content container mt-5">
            <div class="row">
                <div class="col-md-12">
                    <form action="/add" method="POST" class="row g-3">
                        <div class="col-md-3">
                            <label for="num1" class="form-label">Number 1:</label>
                            <input type="text" value="{{num1}}" id="num1" name="num1" class="form-control" required />
                        </div>
                        <div class="col-md-3">
                            <label for="num2" class="form-label">Number 2:</label>
                            <input type="text" value="{{num2}}" 
                            id="num2" name="num2" class="form-control" 
                            {{#if disableInput}}disabled{{/if}} required />
                        </div>
                        <div class="col-md-3">
                            <label for="num2" class="form-label">Result:</label>
                            <input disabled type="text" value="{{result}}" id="res" name="res" class="form-control" />
                        </div>
                </div>
            </div><br>
            <div class="row">
                <div class="col-md-3">
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <button class="btn btn-outline-primary" 
                        type="submit">Add</button>
                        &nbsp;
                        <button class="btn btn-outline-danger" 
                        type="submit" formaction="/subtract">Subtract</button>&nbsp;
                        <button class="btn btn-outline-info" 
                        type="submit" formaction="/multiply">Multiply</button>&nbsp;
                        <button class="btn btn-outline-secondary" 
                        type="submit" formaction="/divide">Divide</button>&nbsp;
                    </div>
                </div>
            </div><br>
                <div class="row">
                <div class="col-md-3">
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <button class="btn btn-outline-primary" 
                        type="submit" formaction="/exponentiate">Exponentiate</button>&nbsp;
                        <button class="btn btn-outline-danger" 
                        type="submit" formaction="/sqrt">Sqaure root</button>&nbsp;
                        <button class="btn btn-outline-info" 
                        type="submit" formaction="/modulo">Modulo</button>&nbsp;
                        <button class="btn btn-outline-secondary" 
                        type="submit" formaction="/factorial">Factorial</button>
                    </div>
                </div>
            </div><br>
            <div class="row">
                <div class="col-md-6">
                    <button class="btn btn-outline-warning" 
                    type="submit" formaction="/reset" class="btn btn-primary">Reset</button>
                </div> 
            </div>
            </form>
            <div class="text-danger text-center">
                {{#if error}}
                <p>Error: {{error}}</p>
                {{/if}}
            </div>
            <div class="text-info text-center">
                {{#if info}}
                <p>Additional information: {{info}}</p>
                {{/if}}
            </div>
        </div>

        <footer class="bg-dark text-light py-2">
            <div class="container text-center">
                <p>&copy; 2024 Calculator App</p>
            </div>
        </footer>
    </div>
</body>

</html>